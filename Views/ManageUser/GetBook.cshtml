@model IEnumerable<AIS_Library.Models.Users.User>

@{
    ViewBag.Title = "GetBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Користувачі, у яких зараз знаходиться вибрана книга</h2>

@using (Html.BeginForm("GetBook", "ManageUser",FormMethod.Post))
{

    <div class="col-md-6">
        <h5>Введіть назву книги</h5>
        <br />
        <input type="text" id="SearchId" name="book" value="" />

        <p align="center"><input type="submit" , value="Знайти" /></p>
        </div>
        }

 <div class="col-md-6">
<table align="center" class="table-condensed" id="table_id">
    <thead>
        <tr>
            <th>Прізвище</th>
            <th>Ім'я</th>
            <th>По-батькові</th>
            <th>Адреса проживання</th>
            <th>Мобільний телефон</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>@item.Surname</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
            </tr>
        }
    </tbody>
</table>
     <br /><br />
     <br /><br />
     <br /><br />

     <br />
     </div>






